# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars should be in .gitignore

# Azure Subscription and Tenant IDs
# Get these from: az account show
subscription_id = "your-subscription-id"
tenant_id = "your-tenant-id"

# Azure region
location = "eastus"

# Project configuration
project_name = "taskflow"
environment = "dev"

# Database credentials
db_username = "admin"
db_password = "CHANGE_ME_SECURE_PASSWORD"

# SSH Public Key (optional - leave empty to auto-generate)
# Generate with: ssh-keygen -t rsa -b 4096 -f ~/.ssh/taskflow_azure
# Then paste the PUBLIC key content here (starts with ssh-rsa)
ssh_public_key = ""

